@model ULTIMO_INTENTO_POKEMONES.DTO.PokemonDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pokemon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form  enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPokemon" />
            <div class="form-group">
                <label asp-for="NombrePokemon" class="control-label"></label>
                <input asp-for="NombrePokemon" class="form-control" />
                <span asp-validation-for="NombrePokemon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoPokemon" class="control-label"></label>
                <select asp-for="TipoPokemon" class="form-control" asp-items="ViewBag.TipoPokemon"></select>
                <span asp-validation-for="TipoPokemon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ataque" class="control-label"></label>
                <input asp-for="Ataque" class="form-control" />
                <span asp-validation-for="Ataque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegionPokemon" class="control-label"></label>
                <select asp-for="RegionPokemon" class="form-control" asp-items="ViewBag.RegionPokemon"></select>
                <span asp-validation-for="RegionPokemon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>

                <div class="custom-file">

                    <label asp-for="Foto" class="custom-file-label" for="customFileLang">Seleccionar Archivo</label>
                    <input asp-for="Foto" type="file" class="form-control custom-file-input" id="customFile" />
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
